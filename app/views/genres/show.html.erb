<div class="row flex">
    <div class="card <%= @genre.color %>">      
      <div class="row">
        <div class="col s2">
          <img src="<%=@genre.logo%>" alt="" class="circle responsive-img white">
        </div>
        <div class="col s10">
          <h3 class="white-text"><%= @genre.genre_name %></h3>
        </div>
        <div class="col 12">
          <p class="left white-text"><%= @genre.description %></p>
        </div>
      </div>
    </div>


<div class="pagination white-text">
<h4 class="center">See more TAGs about <%=@genre.genre_name %></h4>
</div>

<div class="row">
<%@tweets.each do |tweet|%>
  <%= render partial: "tweets/tweets-2" , locals: { tweet: tweet }%>
<%end%>
</div>
<%= paginate @tweets %>

