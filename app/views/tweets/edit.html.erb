<div class="row">
<h4>Fix your TAG</h4>
<div class="col s12">
<div class="card yellow lighten-3 brown-text">
<div class="card-content">
  <%= form_with model: @tweet , local:true do |f| %>
  <%= f.label :text, "How about studying??" %><br>
  <%= f.text_area :text %>

  <%= f.label :genre_id, "Category:" %><br>
  <%= f.collection_select :genre_id, @genre, :id, :genre_name %> 
  <%= f.submit "Just Fixed!", :class =>"btn brown darken-3 white-text btnoption"%>
<% end %>
</div>
</div>
</div>
</div>